page {
  background-color: #F5F5F5;
}

.receivingAddress_view {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
  background-color: white;
  border-bottom: 1rpx solid #F6F6F6;
}

.receivingAddress_view .left {
  width: 70%;
}

.receivingAddress_view .left .top {
  display: flex;
  justify-content: space-between;
}

.receivingAddress_view .left .top .name {
  /* width: 30%; */
  font-size: large;
  font-weight: bold;
}

.receivingAddress_view .left .top .phoneNum {
  width: 65%;
}

.receivingAddress_view .left .address {
  color: #9C9C9C;
  font-size: small;
}

.img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.addAddress {
  position: fixed;
  bottom: 0;
  color: #0085C2;
  background-color: white;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}